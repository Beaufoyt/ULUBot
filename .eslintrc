{
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "max-len": [1, 120, 2, {
      "ignoreComments": true
    }],
    "no-console": 0,
    "new-cap": 0,
    "no-undef": [2],
    "semi": 1,
    "no-trailing-spaces": 1,
    "arrow-spacing": 1,
    "no-var": 1,
    "prefer-const": 1,
    "prefer-destructuring": [1, {"object": true, "array": false}],
    "no-const-assign": 1,
    "no-multiple-empty-lines": [1, { "max": 1 }],
    "object-shorthand": 1,
    "comma-dangle": [1, "always-multiline"],
    "prefer-template": 1,
    "quotes": [1, "single"]
  },
  "env": {
    "node": true,
  }
}
